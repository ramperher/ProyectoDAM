<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dam.proyectodam.ResultActivity"
    android:weightSum="1">

    <EditText android:text="Velocidad media: "
        android:id="@+id/vel_media"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"/>

    <EditText android:text="Distancia Recorrida:"
        android:id="@+id/dist_media"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"/>

    <Button android:id="@+id/botonMapa"
        android:layout_width="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/button_map"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:onClick="mostrarMapa"/>

    <Button android:id="@+id/botonNuevoEntr"
        android:layout_width="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/button_main"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:onClick="volverMain"/>


</LinearLayout>

</LinearLayout>
